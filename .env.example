# MeterScience Environment Variables
# Copy to .env and fill in values

# API Keys
ANTHROPIC_API_KEY=
OPENAI_API_KEY=

# Database
DATABASE_URL=postgresql://meterscience:meterscience@localhost:5432/meterscience
REDIS_URL=redis://localhost:6379

# Stripe (Payments)
STRIPE_SECRET_KEY=sk_test_...
STRIPE_PUBLISHABLE_KEY=pk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...

# Stripe Product IDs
STRIPE_NEIGHBOR_PRICE_ID=price_...
STRIPE_BLOCK_PRICE_ID=price_...
STRIPE_DISTRICT_PRICE_ID=price_...

# AWS/S3 (or MinIO)
AWS_ACCESS_KEY_ID=meterscience
AWS_SECRET_ACCESS_KEY=meterscience
AWS_REGION=us-east-1
S3_BUCKET=meterscience-images
S3_ENDPOINT=http://localhost:9000

# JWT
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# App
APP_NAME=MeterScience
APP_ENV=development
DEBUG=true
API_URL=http://localhost:8000
WEB_URL=http://localhost:3000

# Apple (for iOS)
APPLE_TEAM_ID=
APPLE_KEY_ID=
APPLE_PRIVATE_KEY=

# Email (for notifications)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
FROM_EMAIL=hello@meterscience.io
