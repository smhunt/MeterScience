# Database
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/meterscience

# JWT Authentication
JWT_SECRET_KEY=your-secret-key-change-in-production

# Redis (for caching and background tasks)
REDIS_URL=redis://localhost:6379

# Stripe Payment Configuration
# Get these from: https://dashboard.stripe.com/apikeys
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# Stripe Price IDs
# Create products and prices in Stripe Dashboard, then copy the price IDs here
# Example: price_1ABC123xyz...
STRIPE_PRICE_NEIGHBOR=price_your_neighbor_price_id_here
STRIPE_PRICE_BLOCK=price_your_block_price_id_here
STRIPE_PRICE_DISTRICT=price_your_district_price_id_here

# Object Storage (MinIO/S3) - for storing meter images
S3_ENDPOINT=http://localhost:9000
S3_ACCESS_KEY=minioadmin
S3_SECRET_KEY=minioadmin
S3_BUCKET_NAME=meterscience
S3_REGION=us-east-1

# SMTP Email Configuration
# Used for email verification, password reset, and welcome emails
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
FROM_EMAIL=noreply@meterscience.com
APP_URL=http://localhost:8000

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000

# Environment
ENVIRONMENT=development  # development, staging, production
DEBUG=true
